generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  email             String
  password          String
  createdAt DateTime @default(now()) // Data de criação da conta
}

model admin {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  nome String
  password   String
  createdAt DateTime @default(now()) // Data de criação da conta
}

model Parcerias {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  nome  String @unique
  idade   String
  profissao String 
  numero  String
  email   String
  createdAt DateTime @default(now()) // Data de criação da conta
}

model Contato {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  email  String
  mensagem   String
  createdAt DateTime @default(now()) // Data de criação da conta
}

// HelpService

model Profissional {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String
  senha   String
  telefone    String
  cidade      String
  createdAt DateTime @default(now()) // Data de criação da conta
}

model Contratante {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String
  senha   String
  telefone    String
  cidade      String
  createdAt DateTime @default(now()) // Data de criação da conta
}


model Categorias {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  sobre   String
  email   String
  createdAt DateTime @default(now()) // Data de criação da conta
}

model Servico {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  servico   String
  descricao   String
  categoria    String
  preco         String
  pagamento   String
  email     String
  createdAt DateTime @default(now()) // Data de criação da conta
}